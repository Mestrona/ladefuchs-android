<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/overlay_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/overlay1_1"
        android:layout_width="match_parent"
        android:layout_height="540dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/OnboardingBackground" />

    <ImageView
        android:id="@+id/overlay1_2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="175dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@color/OnboardingBackground"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/onboarding_text_1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="@string/onboarding1"
        android:textColor="@color/colorPrimary"
        android:textSize="17sp"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@id/overlay1_1"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
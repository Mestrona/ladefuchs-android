<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/overlay_3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/overlay3_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/OnboardingBackground"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/onboarding_text_3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bitter"
        android:textStyle="italic"        android:text="@string/onboarding3"
        android:textColor="@color/colorPrimary"
        android:textSize="17sp"
        android:layout_marginTop="130dp"
        app:layout_constraintTop_toTopOf="@id/overlay3_1"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/step_three"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/step_bg"
        android:fontFamily="@font/roboto"
        android:text="3"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="50sp"
        android:textStyle="bold"
        android:layout_marginRight="10dp
"
        app:layout_constraintBottom_toBottomOf="@id/onboarding_text_3"
        app:layout_constraintRight_toLeftOf="@id/onboarding_text_3"
        app:layout_constraintTop_toTopOf="@id/onboarding_text_3" />

    <ImageView
        android:id="@+id/step_3_arrow"
        android:layout_width="256dp"
        android:layout_height="97dp"
        android:layout_marginBottom="10dp"
        android:contentDescription="Arrow to point on settings"
        android:cropToPadding="true"
        app:layout_constraintBottom_toTopOf="@id/onboarding_text_3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@id/onboarding_text_3"
        app:layout_constraintRight_toRightOf="@id/onboarding_text_3"
        app:srcCompat="@drawable/onboarding_arrow" />

</androidx.constraintlayout.widget.ConstraintLayout>
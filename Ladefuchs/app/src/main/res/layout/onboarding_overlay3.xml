<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/overlay_3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/overlay3_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/OnboardingBackground"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/onboarding_text_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bitter"
        android:textStyle="italic"
        android:text="@string/onboarding3"
        android:textColor="@color/colorPrimary"
        android:textSize="17sp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="15dp"
        app:layout_constraintLeft_toRightOf="@id/step_three"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/step_three"
        app:layout_constraintTop_toTopOf="@id/step_three" />

    <TextView
        android:id="@+id/step_three"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/step_bg"
        android:fontFamily="@font/roboto_black"
        android:text="3"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="50sp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="140dp"
        app:layout_constraintTop_toTopOf="@id/overlay3_1"
        app:layout_constraintLeft_toLeftOf="parent
" />

    <ImageView
        android:id="@+id/step_3_arrow"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/onboarding_text_3"
        app:layout_constraintRight_toRightOf="@id/onboarding_text_3"
        app:srcCompat="@drawable/onboarding_arrow" />

</androidx.constraintlayout.widget.ConstraintLayout>